<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homepage"
    tools:context=".adminExamActivites.createExamActivity">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Course name"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:id="@+id/examCourse"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Exam name"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:id="@+id/examName"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question 1"
            android:textSize="25sp"
            android:id="@+id/examque1"
            android:layout_margin="10dp"
            />
         <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anwser 1"
            android:textSize="25sp"
            android:layout_margin="10dp"
             android:id="@+id/examanw1"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question 2"
            android:textSize="25sp"
            android:id="@+id/examque2"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anwser 2"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:id="@+id/examanw2"
                />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question 3"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:id="@+id/examque3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anwser 3"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:id="@+id/examanw3"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Create"
            android:layout_gravity="center"
            android:background="@drawable/buttons"
            android:padding="10dp"
            android:id="@+id/createExamButton"
            />

</LinearLayout>